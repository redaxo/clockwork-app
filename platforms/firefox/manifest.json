{
	"manifest_version": 2,
	"name": "Clockwork",
	"version": "4.1.1",

	"description": "php dev tools integrated to your browser",
	"homepage_url": "https://underground.works/clockwork",

	"icons": {
		"48": "assets/logo-48.png",
		"96": "assets/logo-96.png"
	},

	"devtools_page": "devtools.html",

	"background": {
		"scripts": [ "background.js" ]
	},

	"permissions": [
		"cookies",
		"storage",
		"tabs",
		"webNavigation",
		"webRequest",
		"http://*/",
		"https://*/"
	]
}
